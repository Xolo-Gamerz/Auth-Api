{
  "compilerOptions": {
    "target": "es2020",

    "module": "commonjs",
    "rootDir": "src",
    "allowJs": true,
    "checkJs": true,

    "declaration": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false
  }
}
